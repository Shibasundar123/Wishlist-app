<div class="wishlist-block">
  <div class="wishlist-header">
    <svg class="wishlist-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="{{ block.settings.text_color }}">
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
    </svg>
    <h2 style="color: {{ block.settings.text_color }};">{{ block.settings.heading_text }}</h2>
  </div>
</div>

<style>
  .wishlist-block {
    padding: 20px;
  }
  
  .wishlist-header {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  
  .wishlist-icon {
    stroke-width: 2;
  }
  
  .wishlist-header h2 {
    margin: 0;
    font-size: 24px;
  }
</style>

{% schema %}
{
  "name": "create",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "My Wishlist"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ]
}
{% endschema %}